<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/EditEventActivity_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/darkIndigo"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/colorPrimaryDark"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:title="Edit Event"
        app:titleTextColor="@color/white" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/EditEventActivity_ProgressBar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/EditEventActivity_LinearLayout_EventTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/EditEventActivity_ImageView_Event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/ic_event_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/EditEventActivity_TextInputLayout_EventTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/EditScreenTextInputLayoutStyleDark"
                                app:errorEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/event_title"
                                    android:inputType="text"
                                    android:textSize="20sp"
                                    android:theme="@style/EditScreenTextInputLayoutStyleDark" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Grey" />

                    <LinearLayout
                        android:id="@+id/EditEventActivity_LinearLayout_DateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/EditEventActivity_ImageView_AllDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/ic_today_grey" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <TextView
                                    android:id="@+id/EditEventActivity_TextView_AllDayEvent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="All day Event"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <Switch
                                    android:id="@+id/EditEventActivity_Switch_AllDayEvent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:checked="false"
                                    android:enabled="true"
                                    android:theme="@style/EditScreenTextInputLayoutStyleDark" />


                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/EditEventActivity_LinearLayout_SetDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="30dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="3dp"
                                        android:src="@drawable/ic_date_range_grey" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/date"
                                        android:textColor="@color/Grey"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/EditEventActivity_TexView_SetDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/_06_apr_2020"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/EditEventActivity_LinearLayout_SetTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="3dp"
                                        android:src="@drawable/ic_access_time_grey" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/time"
                                        android:textColor="@color/Grey"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/EditEventActivity_TexView_SetTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/_12_00_am"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <!--                        <Button-->
                        <!--                            android:id="@+id/EditEventActivity_Button_Duration"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginLeft="20dp"-->
                        <!--                            android:layout_marginRight="20dp"-->
                        <!--                            android:layout_marginBottom="20dp"-->
                        <!--                            android:background="@color/darkIndigo"-->
                        <!--                            android:text="@string/duration_0_hours_0_minutes"-->
                        <!--                            android:textColor="@color/white" />-->

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Grey" />

                    <LinearLayout
                        android:id="@+id/EditEventActivity_LinearLayout_Reminder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/EditEventActivity_ImageView_Notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_notifications_active_black_24dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:id="@+id/EditEventActivity_TextView_Notification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/at_the_time_of_event"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <Switch
                                android:id="@+id/EditEventActivity_Switch_Notification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:checked="true"
                                android:theme="@style/EditScreenTextInputLayoutStyleDark" />


                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Grey" />

                    <LinearLayout
                        android:id="@+id/EditEventActivity_LinearLayout_Note"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/EditEventActivity_ImageView_Note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/ic_edit_white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/EditEventActivity_TextInputLayout_Note"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/EditScreenTextInputLayoutStyleDark"
                                app:counterEnabled="true"
                                app:counterMaxLength="150"
                                app:errorEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/add_your_notes"
                                    android:inputType="text"
                                    android:textSize="20sp"
                                    android:theme="@style/EditScreenTextInputLayoutStyleDark" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Grey" />

                    <LinearLayout
                        android:id="@+id/EditEventActivity_LinearLayout_NoteColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/EditEventActivity_ImageView_NoteColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_palette" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:id="@+id/EditEventActivity_TextView_NoteColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/note_color"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/EditEventActivity_TextView_PickNoteColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/circle" />

                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Grey" />

                    <LinearLayout
                        android:id="@+id/EditEventActivity_LinearLayout_Location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/EditEventActivity_ImageView_Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_location_white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/EditEventActivity_TextInputLayout_Location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/EditScreenTextInputLayoutStyleDark"
                                app:errorEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/add_a_location"
                                    android:inputType="text"
                                    android:textSize="20sp"
                                    android:theme="@style/EditScreenTextInputLayoutStyleDark" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/EditEventActivity_LinearLayout_AddPeople"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/EditEventActivity_ImageView_People"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="0.0"
                                app:srcCompat="@drawable/ic_people_white" />


                            <com.google.android.material.textfield.TextInputLayout

                                android:id="@+id/EditEventActivity_TextInputLayout_PhoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="0.8"
                                android:theme="@style/EditScreenTextInputLayoutStyleDark"
                                app:errorEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Add phone number"
                                    android:inputType="phone"
                                    android:textSize="20sp"
                                    android:theme="@style/EditScreenTextInputLayoutStyleDark" />


                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Grey" />

                    <LinearLayout
                        android:id="@+id/EditEventActivity_LinearLayout_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/EditEventActivity_ImageView_Email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/ic_mail" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/EditEventActivity_TextInputLayout_Mail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:theme="@style/EditScreenTextInputLayoutStyleDark"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/EditEventActivity_TextInputEditText_Mail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="15dp"
                                android:layout_weight="0"
                                android:hint="@string/send_mail"
                                android:inputType="textEmailAddress"
                                android:textSize="20sp"
                                android:theme="@style/EditScreenTextInputLayoutStyleDark" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Switch
                            android:id="@+id/EditEventActivity_Switch_Mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:theme="@style/EditScreenTextInputLayoutStyleDark" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Grey" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </FrameLayout>


</LinearLayout>